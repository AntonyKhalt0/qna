$('.question-errors').html('<%= render 'shared/errors', resource: @question %>');

<% if @question.errors.empty? %>
  $('#question-title').html('<%= j @question.title %>');
  $('#question-body').html('<%= j @question.body %>');
  $('.question-files').empty();
  <% @question.files.each do |file| %>
    $('<%= link_to file.filename.to_s, url_for(file) %><br>').appendTo('.question-files');
  <% end %>
  $('#edit-question-<%= @question.id %>').addClass('hidden');
  $('.edit-question-link').show();
<% end %>
